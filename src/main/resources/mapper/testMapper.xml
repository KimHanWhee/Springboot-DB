<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test">
    <select id="findAll" resultType="TestDTO">
        select id, name, age from test
    </select>
    <select id="findOneById" parameterType="Integer" resultType="TestDTO">
        select id, name, age from test
        where id = #{id}
    </select>
    <insert id="insertTest" parameterType="TestDTO">
        insert into test(name, age)
        values(#{name}, #{age})
    </insert>
    <update id="updateTest" parameterType="TestDTO">
        update test set name = #{name}, age = #{age}
        where id = #{id}
    </update>
    <delete id="deleteTest" parameterType="Integer">
        delete from test
        where id = #{id}
    </delete>
</mapper>